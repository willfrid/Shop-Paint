{% extends 'base.html.twig' %}

{% block title %}Willfrid Dongmo{% endblock %}

{% block body %}
   <section data-jarallax data-speed=".8" class="py-15 overlay overlay-black overlay-60 jarallax" style="background-image: url(https://images.pexels.com/photos/4050320/pexels-photo-4050320.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
       <div class="container">
           <div class="row">
               <div class="col-md-12 col-md-7">
                   <blockquote class="blockquote mb-0">
                       <p class="h2 text-white">
                           {{ peintre.prenom }} {{ peintre.nom }}
                       </p>
                       <footer class="blockquote-footer text-white-50 mb-0 justify">
                           <p class="h3">
                               {{ peintre.APropos | u.truncate(150,'...',false)}}
                           </p>
                       </footer>
                   </blockquote>
               </div>
           </div>
       </div>

   </section>
{% endblock %}
