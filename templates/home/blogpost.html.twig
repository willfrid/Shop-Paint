<section class="pt-7 pt-md-10">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Heading -->
                <h2 class="mb-0">
                    Denieres Actualités
                </h2>
                <!--  -->
                <p class="mb-5 text-muted">
                    Ici,vous avez nos denieres actualités.
                </p>
            </div>
        </div>
        <div class="row">
            {% for blogpost in blogposts %}
                <div class="col-12 col-md-6 col-lg-4 d-flex">
                    <!-- Card -->
                    <div class="mb-6 card mb-lg-0 shadow-light-lg lift lift-lg" data-aos="fade-up">
                        <!-- Body -->
                        <a class="card-body" href="#!">

                            <!-- Heading -->
                            <h3>
                                {{ blogpost.titre }}
                            </h3>

                            <!-- Text -->
                            <p class="mb-0 text-muted">
                                {{ blogpost.contenu | u.truncate(150,'...',false) }}
                            </p>
                        </a>
                        <!-- Meta -->
                        <a class="mt-auto card-meta" href="#!">
                            <!-- Divider -->
                            <hr class="card-meta-divider">
                            <!-- Author -->
                            <h6 class="mb-0 text-uppercase text-muted">
                                Publier le :   {{ blogpost.CreatedAt | date("d/m/Y") }}
                            </h6>
                        </a>

                    </div>

                </div>
            {% endfor %}

        </div>
    </div>
</section>