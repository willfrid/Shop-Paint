<!-- ARTICLES -->
<section class="pt-8 pt-md-11">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Heading -->
                <h2 class="mb-0">
                    Denieres realisations
                </h2>
                <!--  -->
                <p class="mb-5 text-muted">
                    Ici, vous allez recevoir toutes nos denieres realisations
                </p>
            </div>
        </div>
        <!-- / .row -->
        <div class="row">
            {% for peinture in peintures %}
                <div class="col-12">
                    <!-- Card -->
                     <div class="card card-row shadow-light-lg mb-6" data-aos="fade-right">
                        <div class="row gx-0">
                            <a class="col-12 col-md-6 bg-cover card-img-start" style="background-image: url({{ vich_uploader_asset(peinture,'imageFile') }});" href="{{ path('realisation_details',{'slug':peinture.slug}) }}">
                                <!-- Image (placeholder) -->
                                <img src="{{ vich_uploader_asset(peinture,'imageFile') }}" alt="..." class="img-fluid d-md-none invisible">

                                <!-- Shape -->
                                <div class="shape shape-end shape-fluid-y text-white d-none d-md-block">
                                    <svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M116 0H51v172C76 384 0 517 0 517v173h116V0z" fill="currentColor"/>
                                    </svg>
                                </div>
                            </a>
                            <div class="col-12 col-md-6">
                                <!-- Body -->
                                <a class="card-body" href="{{ path('realisation_details',{'slug':peinture.slug}) }}">
                                    <!-- Heading -->
                                    <h3>
                                        {{ peinture.nom }}
                                    </h3>
                                    <!-- Text -->
                                    <p class="mb-0 text-muted">
                                        {{ peinture.description | u.truncate(150,'...',false) }}
                                    </p>
                                </a>
                                <!-- Meta -->
                                <a class="card-meta" href="#!">
                                    <!-- Divider -->
                                    <hr class="card-meta-divider">
                                    <!-- Avatar -->
                                    <div class="avatar avatar-sm me-2">
                                        <img src="assets/img/avatars/avatar-2.jpg" alt="..." class="avatar-img rounded-circle">
                                    </div>
                                    <!-- Author -->
                                    <h6 class="text-uppercase text-muted me-2 mb-0">
                                        Adolfo Hess
                                    </h6>
                                    <!-- Date -->
                                    <p class="h6 text-uppercase text-muted mb-0 ms-auto">
                                         Ajout√© le : {{ peinture.CreatedAt | date("d/m/Y") }}
                                    </p>
                                </a>
                            </div>
                        </div>
                    </div>
                 </div>
            {% endfor %}
         </div>
    </div>
</section>